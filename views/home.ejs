<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/styles.css" />
  </head>
  <body>
    <%-include("partials/navbar.ejs")%>
    <div class="background-img d-flex justify-content-center align-items-center">
      <div class="container">
        <div class="text-center text-white">
          <h1 class="fs-1">Hack the blog</h1>
          <p class="fs-5">El blog de Hack Academy</p>
        </div>
      </div>
    </div>
    <!-- prettier-ignore -->
    <div class="container">
      <div class="articles mt-5">
        <% for(const article of articles) { %>
        <a style="text-decoration: inherit;
        color: inherit;
        cursor: auto" href="http://localhost:3000/articulos/<%=article.id%>">
        <div id="<%=article.id%>" class="article p-4 rounded">
          <h3 class="fw-bold px-4"><%= article.title%></h3>
          <p class="px-4"><%= article.content %></p>
          <em class="px-4">Creado por <%= article.author %> <%=article.createdAt%></em>
        </div>
      </a>
        <%}%>
      </div>
    </div>
    <hr class="mt-5" />
    <!-- prettier-ignore-end -->

    <%-include("partials/footer.ejs")%>
    <script src="js/app.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script src="https://kit.fontawesome.com/5bed63e9a2.js" crossorigin="anonymous"></script>
  </body>
</html>
